<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E0E8"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <TextView
               android:id="@+id/tV0"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:text="注册信息"
               android:textColor="#333D42"
               android:textSize="16sp" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#80ffffff"
               android:layout_gravity="center"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tV1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:inputType="textPersonName"
                       android:letterSpacing="0.2"
                       android:text="姓名"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/edT1"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入姓名"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tV5"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="性别"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <RadioGroup
                       android:id="@+id/rdG"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="horizontal">

                       <RadioButton
                           android:id="@+id/rdB1"
                           android:layout_width="50dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginRight="34dp"
                           android:checked="true"
                           android:gravity="center"
                           android:text="男"
                           android:textColor="#333D42"
                           android:textSize="16sp" />

                       <RadioButton
                           android:id="@+id/rdB2"
                           android:layout_width="50dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:text="女"
                           android:textColor="#333D42"
                           android:textSize="16sp" />
                   </RadioGroup>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tV2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="用户"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/edT2"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入学号/教工号"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tV3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="密码"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/edT3"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:ems="10"
                       android:hint="请输入16位以内的密码"
                       android:inputType="textPassword"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/id_1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="ID号"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/id_2"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:inputType="number"
                       android:hint="请输入身份证号"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>





               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="1dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tV6"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="年龄"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/edT6"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入年龄"
                       android:inputType="number"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tV7"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="电话"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/edT7"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:ems="10"
                       android:hint="请输入11位电话号码"
                       android:inputType="phone"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />


               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/mail"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="邮箱"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/mail_1"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入邮箱"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="32dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/nianxian"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="年限"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/nianxian_1"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入教育年限"
                       android:inputType="number"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="32dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/lingyu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="领域"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/lingyu_1"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入教育领域"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="32dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/shiling"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="适龄"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/shiling_1"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入教育适合年龄"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="32dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/jianjie"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="25dp"
                       android:layout_weight="1"
                       android:letterSpacing="0.2"
                       android:text="简介"
                       android:textColor="#333D42"
                       android:textSize="20sp" />

                   <EditText
                       android:id="@+id/jianjie_1"
                       android:layout_width="200dp"
                       android:layout_height="45dp"
                       android:layout_marginLeft="1dp"
                       android:layout_marginRight="25dp"
                       android:layout_weight="1"
                       android:drawablePadding="5dp"
                       android:hint="请输入个人简介"
                       android:letterSpacing="0.1"
                       android:textColor="#333D42"
                       android:textSize="16sp" />

               </LinearLayout>


           </LinearLayout>
</ScrollView>


           <Button
               android:id="@+id/btn_register"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="30dp"
               android:background="@drawable/btn_returnbutton"
               android:text="注           测"
               android:textSize="20sp" />

           <Button
               android:id="@+id/btn_return"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="50dp"
               android:background="@drawable/btn_loginbutton"
               android:text="返           回"
               android:textSize="20sp" />

       </LinearLayout>

   </ScrollView>
</LinearLayout>